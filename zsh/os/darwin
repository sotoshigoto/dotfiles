export PATH=$(brew --prefix coreutils)/libexec/gnubin:$PATH

# ====================================
# Alias
# ====================================
# show with hidden files
alias ls="ls --color"
alias la="ls -A --color"

# ------------------------------------
# Rmtrash
# ------------------------------------
alias rm='rmtrash'
alias rr='rmtrash *~'